<link rel="stylesheet" href="/sign_in.css"></style>


<div class="d-flex align-items-center py-4 bg-body-tertiary">
  <main class="form-signin w-100 m-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |fo| %>
      <img class="mb-4" src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"><!--a-->
      <h1 class="h3 mb-3 fw-normal">Please Sign Up</h1>

      <div class="form-floating">
        <%= fo.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "name@example.com" %>
        <%= fo.label :email,"Email address" %>
      </div>
      <div class="form-floating">
        <%= fo.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "Password" %>
        <%= fo.label :password, "Password" %>
      </div>

      <div class="form-floating form-control" style="border-radius:0;">
        <%= fo.select :role, [['Receptionist', 'receptionist'], ['Doctor', 'doctor']], {}, { class: 'form-control' } %>
        <%= fo.label :role %>
      </div>

      <div class="form-floating">
        <%= fo.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Password" %>
        <%= fo.label :password_confirmation %>
      </div>

      <div class="form-group">
        <button class="btn btn-primary w-100 py-2" type="submit">Sign Up</button>
      </div>

      <div class="mt-3 txt-center">
        <%= link_to "Sign in", new_user_session_path %><br>
      </div>
    <% end %>
  </main>
</div>

