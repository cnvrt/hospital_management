<div class="container mt-5">
  <h2>Forgot Password</h2>

  <p>If you have forgotten your password, you can reset it by entering your email address below.</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
    </div>

    <%= f.submit "Reset Password", class: 'btn btn-primary' %>
  <% end %>

  <%= link_to "Back to Login", new_user_session_path, class: "btn btn-secondary mt-3" %>
</div>
