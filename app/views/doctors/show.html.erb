<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3>Patient Details</h3>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @patient.name %></h5>
      <p class="card-text"><strong>Age:</strong> <%= @patient.age %></p>
      <p class="card-text"><strong>Gender:</strong> <%= @patient.gender %></p>
      <p class="card-text"><strong>Created at:</strong> <%= @patient.created_at.strftime("%Y-%m-%d") %></p>
      <p class="card-text"><strong>Medical History: </strong><%= @patient.medical_history %></p>
      <%= link_to 'Back', doctors_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
